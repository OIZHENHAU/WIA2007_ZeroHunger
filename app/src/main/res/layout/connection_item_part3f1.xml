<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_margin="8dp"
    android:background="@drawable/background_search1">

    <ImageView
        android:id="@+id/connectionImageViewP3F1"
        android:src="@drawable/farmp3"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginEnd="10dp"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/connectionNameTextViewP3F1"
        android:layout_toEndOf="@+id/connectionImageViewP3F1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="Happy Farm"
        android:textColor="@color/purple"/>

    <LinearLayout
        android:id="@+id/linearLayout1P3F1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/connectionImageViewP3F1"
        android:layout_below="@+id/connectionNameTextViewP3F1"
        android:orientation="horizontal">

        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16dp"
            android:text="Distance: "/>

        <TextView
            android:id="@+id/distanceTextViewP3F1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:text="12km" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2P3S1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toEndOf="@+id/connectionImageViewP3F1"
        android:layout_below="@+id/linearLayout1P3F1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Products: "/>

        <TextView
            android:id="@+id/productTextViewP3F1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:text="Vegetable" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/connectionImageViewP3F1"
        android:layout_below="@+id/linearLayout2P3S1"
        android:layout_marginStart="2dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp">

            <ImageView
                android:id="@+id/productImageView1Part3F1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/kangkung" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM "/>

                <TextView
                    android:id="@+id/product1PriceTextViewPart3F1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.70"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="25dp">

            <ImageView
                android:id="@+id/productImageView2Part3F1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/cabbage" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM "/>

                <TextView
                    android:id="@+id/product2PriceTextViewPart3F1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3.50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>