<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Part3.SubscriptionDetailsFragmentPart3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSubscriptionDetailsP3F3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Subscription Plan"
                android:layout_marginStart="3dp"
                android:backgroundTint="@color/green"
                app:cornerRadius="0dp"/>

            <Button
                android:id="@+id/buttonMySubscriptionDetailsP3F3"
                android:layout_width="200dp"
                android:text="My Subscription"
                android:backgroundTint="@color/light_grey"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                app:cornerRadius="0dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewSubscriptionDetailsP3F3"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="160dp"
            android:background="@color/white"
            android:src="@drawable/cabbage"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSubscriptionNameDetailsP3F3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="Cabbage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(1 kg)"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textColor="@color/green"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="18dp"
                android:text="Location: "/>

            <TextView
                android:id="@+id/textViewLocationDetailsP3F3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:text="42nd Mile, Kea Farm, 39100, Malaysia"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="18dp"
                android:text="Category: "/>

            <TextView
                android:id="@+id/textViewCategoryDetailsP3F3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:text="Vegetables"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Weekly Price: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="1dp"
                android:text="RM "/>

            <TextView
                android:id="@+id/textViewWeeklyPriceDetailsP3F3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="9.90"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" /kg"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Monthly Price: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="1dp"
                android:text="RM "/>

            <TextView
                android:id="@+id/textViewMonthlyPriceDetailsP3F3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="9.90"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" /kg"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="Select Plans: "/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonWeeklyPriceDetailsP3F3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/light_grey"
                    android:textColor="@color/black"
                    android:text="Weekly"/>

                <Button
                    android:id="@+id/buttonMonthlyPriceDetailsP3F3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/light_grey"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:text="Monthly"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Total Prices: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:text="RM"/>

            <TextView
                android:id="@+id/totalAmountSubscriptionDetailsP3F3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:text=" - "/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backButtonSubscriptionDetailsP3F3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:text="Back"
                app:cornerRadius="0dp"/>

            <Button
                android:id="@+id/subscribeButtonSubscriptionDetailsP3F3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/green"
                android:text="Subscribe"
                app:cornerRadius="0dp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>