<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Part1.soil_analysis.SoilAnalysisActivity"
    android:background="@drawable/background_image">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_search1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/crop_management_icon" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="5dp"
            android:text="Crop Management"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/purple"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textColor="@color/purple"
            android:text="Provide planting time and management tips"
            android:textSize="10sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/frameLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Nitrogen"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Phosphorus"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_marginBottom="30dp">

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/background_search1">

                <EditText
                    android:id="@+id/cropNitrogenEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="%"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/background_search1">

                <EditText
                    android:id="@+id/cropPhosphorusEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="%"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Potassium"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="PH Value"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_marginBottom="30dp">

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/background_search1">

                <EditText
                    android:id="@+id/cropPotassiumEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="%"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/background_search1">

                <EditText
                    android:id="@+id/cropPHValueEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="2.5"/>

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:background="@drawable/background_search1"
            android:layout_margin="5dp">

            <EditText
                android:id="@+id/cropTemperatureEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="'C"/>

        </FrameLayout>

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:background="@drawable/background_search1"
            android:layout_margin="5dp">

            <EditText
                android:id="@+id/cropHumidityEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="%"/>

        </FrameLayout>

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="Rainfall"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:background="@drawable/background_search1"
            android:layout_margin="5dp">

            <EditText
                android:id="@+id/cropRainfallEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="mm"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/cropBackButton"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:text="Back"
                android:backgroundTint="@color/purple"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/cropSubmitButton"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/purple"
                android:text="Submit"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>