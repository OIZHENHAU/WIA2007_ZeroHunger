<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/soil_analysis_img"
    tools:context=".Part1.soil_analysis.MainSoilActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/your_rounded_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/weather_icon" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="5dp"
            android:text="24 C"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Kuantan"
            android:textSize="20dp"
            android:textStyle="bold" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="396dp"
        android:background="@drawable/your_rounded_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/soil_analysis_icon"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="396dp"
        android:background="@drawable/your_rounded_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/crop_management_icon"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>