<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_margin="8dp"
    android:background="@color/light_grey">

    <ImageView
        android:id="@+id/FinancialAidImageP5"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginEnd="10dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/DFAP_Financial_Aid_Image" />

    <TextView
        android:id="@+id/FinancialAidNameP5"
        android:layout_toEndOf="@+id/FinancialAidImageP5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:text="@string/DFAP_Financial_Aid_Name"
        android:textColor="@color/purple"/>

    <TextView
        android:id="@+id/FinancialAidAmountP5"
        android:layout_toEndOf="@+id/FinancialAidImageP5"
        android:layout_below="@+id/FinancialAidNameP5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:text="@string/DFAP_Financial_Aid_Amount" />

    <TextView
        android:id="@+id/FinancialAidSlotsP5"
        android:layout_toEndOf="@+id/FinancialAidImageP5"
        android:layout_below="@+id/FinancialAidAmountP5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:text="@string/DFAP_Financial_Aid_Slots" />

    <TextView
        android:id="@+id/FinancialAidDatelineP5"
        android:layout_toEndOf="@id/FinancialAidImageP5"
        android:layout_below="@id/FinancialAidSlotsP5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:text="@string/DFAP_Financial_Aid_Dateline" />

</RelativeLayout>